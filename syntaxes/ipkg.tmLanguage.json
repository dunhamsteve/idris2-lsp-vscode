{
  "name": "Idris Ipkg",
  "scopeName": "source.ipkg",
  "fileTypes": ["ipkg"],
  "patterns": [
    {
      "name": "comment.line.ipkg",
      "match": "(--).*$\n?",
      "comment": "Line comment"
    },
    {
      "name": "comment.block.ipkg",
      "begin": "\\{-",
      "end": "-\\}",
      "comment": "Block comment"
    },
    {
      "name": "keyword.control.ipkg",
      "match": "\\b(package|depends|opts|modules|sourcedir|makefile|objs|executable|main|libs|pkgs|tests|builddir|outputdir|prebuild|postbuild|preinstall|postinstall|preclean|postclean)\\b"
    },
    {
      "name": "constant.language.ipkg",
      "match": "\\b(brief|version|readme|license|authors|maintainers|homepage|sourceloc|bugtracker)\\b"
    },
    {
      "name": "string.quoted.double.ipkg",
      "begin": "\"",
      "end": "\""
    }
  ]
}
