{
  "comments": {
    "lineComment": "--",
    "blockComment": ["{-", "-}"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    // ["{", "}"], // gets in the way of block comments
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    { "open": "{-", "close": " -}", "notIn": ["string"] }
  ],
  "autoCloseBefore": ";:.,=])>` \n\t",
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "onEnterRules": [
    {
      "beforeText": "(do|where|let|of)$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": "^\\s+$",
      "action": { "indent": "outdent" }
    },
  ],
  "wordPattern": "(\\??[^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\\"\\,\\<\\>\\/\\?\\s]+)"
}
